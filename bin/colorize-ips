#!/bin/bash
set -eo pipefail
#set -x

. "${DAVINCI_HOME}/davinci/sh/51-util.sh"

CACHE_FILE='/tmp/bluegreen-cache.txt'
CMD='xcolorize yellow pending red dead green running'

BLU="$(cat /tmp/bluegreen-cache.txt | head -1)"

if [[ -n "$BLU" ]]; then
  CMD+=" blue $BLU"
fi

GRN="$(cat /tmp/bluegreen-cache.txt | tail -1)"

if [[ -n "$GRN" ]]; then
  CMD+=" green $GRN"
fi

${CMD}

